<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    android:background="@drawable/map"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"


    tools:context="com.example.sriram.singleimage2.Registration">



    <include layout="@layout/content_add_image" />




    <TextView
        android:layout_width="358dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Registration"
        android:textSize="50dp"
        android:textColor="#795548"
        android:id="@+id/regtext"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="6dp"/>



    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_below="@+id/regtext"
        android:fillViewport="false"
        android:orientation="vertical"
        android:padding="1dp"
        android:layout_marginTop="75dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="1dp"
            >
            <EditText
                android:layout_width="328dp"
                android:layout_height="65dp"
                android:inputType="textPersonName"
                android:hint="First Name"
                android:ems="10"
                android:id="@+id/fname"
                android:textColor="#808"
                android:layout_weight="0.91" />

            <EditText
                android:layout_width="328dp"
                android:layout_height="65dp"
                android:inputType="textPersonName"
                android:hint="Second Name"
                android:ems="10"
                android:id="@+id/lname"
                android:textColor="#808"
                android:layout_weight="0.13" />

            <EditText
                android:layout_width="328dp"
                android:layout_height="65dp"
                android:inputType="textPersonName"
                android:hint="Reg. No."
                android:ems="10"
                android:id="@+id/Regno"
                android:textColor="#808"
                android:layout_weight="0.13"/>

            <EditText
                android:layout_width="328dp"
                android:layout_height="65dp"
                android:inputType="textPassword"
                android:hint="password"
                android:ems="10"
                android:id="@+id/password"
                android:textColor="#808"
                android:layout_weight="0.13" />

            <EditText
                android:layout_width="328dp"
                android:layout_height="65dp"
                android:inputType="textPassword"
                android:hint="confirm password"
                android:ems="10"
                android:id="@+id/cpassword"
                android:textColor="#808"
                android:layout_weight="0.13" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/lblDateAndTime"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text="Date Of Birth"
                    android:textSize="17dp"
                    android:textColor="#808">
                </TextView>
                <Button
                    android:id="@+id/btnDate"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:text="Date"
                    android:textColor="@color/colorPrimaryDark">
                </Button>
            </LinearLayout>
            <EditText
                android:layout_width="328dp"
                android:layout_height="65dp"
                android:inputType="textPersonName"
                android:hint="contact"
                android:ems="10"
                android:id="@+id/contact"
                android:textColor="#808"
                android:layout_weight="0.13" />
        <LinearLayout android:id="@+id/relativeLayout4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:inputType="textPersonName"
                android:text="Course"
                android:ems="10"
                android:id="@+id/lblcourse"
                android:textColor="#808"
                android:textSize="18dp"
                android:layout_weight="0.13" />
            <Spinner
                android:layout_width="200dp"
                android:layout_alignParentRight="true"
                android:id="@+id/spincourse"
                android:entries="@array/course"
                android:layout_weight="0.13"
                android:layout_height="65dip"
                android:drawSelectorOnTop="true"
                >
            </Spinner>
        </LinearLayout>

        <LinearLayout android:id="@+id/relativeLayout3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:inputType="textPersonName"
                android:text="Department"
                android:ems="10"
                android:id="@+id/lbldept"
                android:textColor="#808"
                android:textSize="18dp"
                android:layout_weight="0.13" />
            <Spinner
                android:layout_width="320dp"
                android:layout_alignParentRight="true"
                android:id="@+id/spindept"
                android:entries="@array/Department"
                android:layout_weight="0.13"
                android:layout_height="65dip"
                android:drawSelectorOnTop="true"
                >
            </Spinner>
            </LinearLayout>
            <EditText
                android:layout_width="328dp"
                android:layout_height="65dp"
                android:inputType="textPersonName"
                android:hint="Email"
                android:ems="10"
                android:id="@+id/email"
                android:textColor="#808"
                android:layout_weight="0.13" />
        <LinearLayout android:id="@+id/relativeLayout5"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:inputType="textPersonName"
                android:text="Session"
                android:ems="10"
                android:id="@+id/lblsession"
                android:textColor="#808"
                android:textSize="18dp"
                android:layout_weight="0.13" />
            <Spinner
                android:layout_width="190dp"
                android:layout_alignParentRight="true"
                android:id="@+id/spinsession"
                android:entries="@array/session"
                android:layout_weight="0.13"
                android:layout_height="65dip"
                android:drawSelectorOnTop="true"
                >
            </Spinner>
            </LinearLayout>

            <LinearLayout android:id="@+id/relativeLayout2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="65dp"
                    android:inputType="textPersonName"
                    android:text="Current Year"
                    android:ems="10"
                    android:id="@+id/cyeartext"
                    android:textColor="#808"
                    android:textSize="18dp"
                    android:layout_weight="0.13" />
                <Spinner
                    android:layout_width="200dp"
                    android:id="@+id/cyearspin"
                    android:entries="@array/year"
                    android:layout_weight="0.13"
                    android:layout_height="65dp"
                    android:drawSelectorOnTop="true"
                    >
                </Spinner>
            </LinearLayout>

            <LinearLayout android:id="@+id/relativeLayout8"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:inputType="textPersonName"
                android:text="Insert Image"
                android:ems="4"
                android:id="@+id/txtimage"
                android:textColor="#808"
                android:textSize="18dp"
                android:layout_weight="0.13" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:ems="4"
                    android:id="@+id/image"
                    />

            <Button
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:text="Image"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/fab"/>
        </LinearLayout>

            <Button
                android:text="Submit"
                android:textSize="25dp"
                android:layout_width="369dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:id="@+id/buttonreg"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:onClick="onClick"/>

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
